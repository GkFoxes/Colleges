@model EditProductViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Model.FormInput.Id == 0 ? "Добавление" : "Редактирование") </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="User" asp-action="_EditProductPartial">
                    <input type="hidden" asp-for="@Model.OrganizationId" />
                    <input type="hidden" asp-for="@Model.FormInput.Id" />
                    <div class="form-group">
                        <label asp-for="@Model.FormInput.Name"></label>
                        <input type="text" data-name="Name" asp-for="@Model.FormInput.Name" class="form-control" />
                        <span asp-validation-for="@Model.FormInput.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.FormInput.Price"></label>
                        <input type="text" data-name="Price" asp-for="@Model.FormInput.Price" class="form-control" />
                        <span asp-validation-for="@Model.FormInput.Price"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" data-save="modal">Сохранить</button>
            </div>
        </div>
    </div>
</div>