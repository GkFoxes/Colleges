@model Organization
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">Информация об организации</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="User" asp-action="_EditOrganizationInfoPartial">
                    <input type="hidden" asp-for="@Model.Id" />
                    <div class="form-group">
                        <label asp-for="@Model.Info.Name"></label>
                        <input type="text" asp-for="@Model.Info.Name" class="form-control" />
                        <span asp-validation-for="@Model.Info.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Info.PhoneNumber"></label>
                        <input type="tel" asp-for="@Model.Info.PhoneNumber" class="form-control" />
                        <span asp-validation-for="@Model.Info.PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Info.FullAdress"></label>
                        <input type="text" asp-for="@Model.Info.FullAdress" class="form-control" />
                        <span asp-validation-for="@Model.Info.FullAdress"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" data-save="modal">Сохранить</button>
            </div>
        </div>
    </div>
</div>