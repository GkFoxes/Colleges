<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoBusiness</title>
    <link rel="stylesheet" href="~/lib/bootstrap-4.5.0-dist/css/bootstrap.css">
    <link rel="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- JS, Popper.js, and jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap-4.5.0-dist/js/bootstrap.min.js"></script>*@
    <script src="~/lib/bootstrap-4.5.0-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/tables//datatables/datatables.min.js"></script>
    <script src="~/lib/tables/handsontable/languages/ru-RU.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/tables/table-export/html5/dataTables.buttons.min.js"></script>
    <script src="~/lib/tables/table-export/html5/buttons.flash.min.js"></script>
    <script src="~/lib/tables/table-export/html5/jszip.min.js"></script>
    <script src="~/lib/tables/table-export/html5/pdfmake.min.js"></script>
    <script src="~/lib/tables/table-export/html5/vfs_fonts.js"></script>
    <script src="~/lib/tables/table-export/html5/buttons.html5-custom.js"></script>
    <script src="~/lib/tables/table-export/html5/buttons.print.min.js"></script>
    @*<script src="~/lib/tables/table-filter.js"></script>*@

    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" asp-action="Index">@ViewData["Title"]</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index">Главная<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <span class="navbar-text">
                    <label style="color:white; font-weight:normal;">@User.Identity.Name</label>
                    <a asp-controller="Account" asp-action="Logout" style="color:white; font-weight:bold;" class="btn btn-danger">Выйти</a>
                </span>
            </div>
        </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - InfoBusiness - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
